/* Filtrando e atualizando os valores Nulos */

select nome, sexo, email
from funcionarios
where email is NULL;

update funcionarios
set email = 'watson@gmail.com'
where nome = 'Watson';

update funcionarios
set email = 'adams@gmail.com'
where nome = 'Adams';

